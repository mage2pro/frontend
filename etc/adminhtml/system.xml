<?xml version='1.0'?>
<config
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd"
>
	<system>
		<!--
			2015-07-10
			Минимальная длина идентификатора tab — 3 символа:
			https://github.com/magento/magento2/blob/1.0.0-beta/app/code/Magento/Config/etc/system_file.xsd#L405
			Поэтому ставим символ подчёркивания вначале.
		-->
		<tab id='_df' translate='label' sortOrder='-100'>
			<label>Mage2.PRO</label>
		</tab>
		<section
			id='dfe_product_view'
			translate='label'
			type='text'
			showInDefault='1'
			showInWebsite='1'
			showInStore='1'
		>
			<tab>_df</tab>
			<label>Product View</label>
			<class>separator-top</class>
			<!--
				2015-11-13
				https://mage2.pro/t/197
			-->
			<resource>Dfe_ProductView::config</resource>
			<group
				id='price'
				translate='label'
				type='text'
				sortOrder='1'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>Price</label>
				<field
					id='font'
					type='Df\Framework\Data\Form\Element\Font'
					translate='label'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Font</label>
					<comment><![CDATA[A font for the Price.]]></comment>
					<backend_model>Df\Config\Backend\Serialized</backend_model>
				</field>
			</group>
			<group
				id='sku'
				translate='label'
				type='text'
				sortOrder='2'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>SKU</label>
				<field
					id='visibility'
					translate='label'
					type='select'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Visibility</label>
					<source_model>Dfe\ProductView\ConfigSource\Visibility\VD</source_model>
					<comment><![CDATA[<a href='https://mage2.pro/t/197'>Documentation.</a>]]></comment>
				</field>
				<field
					id='id_instead_of_sku'
					translate='label'
					type='Df\Framework\Data\Form\Element\Checkbox'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Show ID instead of SKU?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<depends>
						<field id='visibility' negative='1'>none</field>
					</depends>
				</field>
				<field
					id='label'
					translate='label'
					type='text'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Label</label>
					<comment><![CDATA[The default label is `SKU`.]]></comment>
					<depends>
						<field id='visibility' negative='1'>none</field>
					</depends>
				</field>
				<field
					id='label_suffix'
					translate='label'
					type='text'
					sortOrder='3'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Label Suffix</label>
					<comment><![CDATA[The default label suffix is `#:`.]]></comment>
					<depends>
						<field id='visibility' negative='1'>none</field>
					</depends>
				</field>
				<field
					id='value_font'
					type='Df\Framework\Data\Form\Element\Font'
					translate='label'
					sortOrder='4'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Value Font</label>
					<comment><![CDATA[A font for the SKU.]]></comment>
					<backend_model>Df\Config\Backend\Serialized</backend_model>
					<depends>
						<field id='visibility' negative='1'>none</field>
					</depends>
				</field>
				<field
					id='label_font'
					type='Df\Framework\Data\Form\Element\Font'
					translate='label'
					sortOrder='5'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Label Font</label>
					<comment><![CDATA[A font for the SKU's label.]]></comment>
					<backend_model>Df\Config\Backend\Serialized</backend_model>
					<depends>
						<field id='visibility' negative='1'>none</field>
					</depends>
				</field>
			</group>
			<group
				id='stock_status'
				translate='label'
				type='text'
				sortOrder='3'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>Stock Status</label>
				<!-- https://mage2.pro/t/196 -->
				<field
					id='visibility'
					translate='label'
					type='select'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Visibility</label>
					<source_model>Dfe\ProductView\ConfigSource\Visibility\VD</source_model>
					<comment>
						<![CDATA[<a href='https://mage2.pro/t/196'>Has it any sense to display the stock status for the virtual products?</a>]]></comment>
				</field>
				<field
					id='font'
					type='Df\Framework\Data\Form\Element\Font'
					translate='label'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Font</label>
					<comment><![CDATA[A font for the Stock Status.]]></comment>
					<backend_model>Df\Config\Backend\Serialized</backend_model>
					<depends>
						<field id='visibility' negative='1'>none</field>
					</depends>
				</field>
			</group>
		</section>
	</system>
</config>